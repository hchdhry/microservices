@using mango.web.Models.DTO;
@model CouponDTO;

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Coupon</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Minimum Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" class="form-control" disabled />
               
                <input type="hidden" asp-for="MinAmount" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" disabled />
               
                <input type="hidden" asp-for="DiscountAmount" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" class="form-control" disabled />
         
                <input type="hidden" asp-for="CouponCode" />
            </div>

            <!-- Hidden field to pass couponID to the server -->
            <input type="hidden" asp-for="couponID" />

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="CouponIndex" asp-controller="Coupon">Back to
                    List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
